<div class="title">
  <h2>Edit Artist</h2>
</div>

<div class="edit-artist">
  <div>
    <form action="/artists/<%= @artist.id %>/edit" method="POST">
      <div class="inputs">
        <label for="name">Artist Name:</label>
        <input type="text" name="name" value="<%= @artist.swap_the() %>">
      </div>
  </div>

    <hr>

    <button class="btn edit" type="submit" name="button">Edit</button>
  </form>

  <form action="/artists/<%= @artist.id %>/delete" method="post">
    <button class="btn delete" type="submit" name="button">Delete</button>
  </form>

  </form>
</div>
