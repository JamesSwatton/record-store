<% @first_char_from_names.each do |char| %>
<h1><%= char %></h1>
<% end %>

<h2>ARTISTS</h2>

<h3><a href="/artists/new">Add Artist</a></h3>

<!-- adds tag showing artist was recintly added if poped from list %> -->
<!-- index artists alphabetically while ignoring 'The' prefix -->
<% @artists.each do |artist| %>
<% name = swap_the(artist.name)%>
  <% if name != swap_the(@recently_added_artist.name) %>
    <p><a href="/artists/<%= artist.id %>"> <%= name  %> </a></p>
  <% else %>
      <p><a href="/artists/<%= artist.id %>"> <%= name %> </a> -- recently added --</p>
  <% end %>
<% end %>

<% def swap_the(string) %>
  <% if string.start_with?("The") || string.end_with?("The") %>
    <% string = string.split.reverse.join(" ") %>
    <% return string %>
  <% end %>
  <% return string %>
<% end %>
