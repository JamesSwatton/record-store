<h2><%= @artist.swap_the() %></h2>

<a href="/artists/<%= @artist.id %>/edit">Edit</a>

<form action="/artists/<%= @artist.id %>/delete" method="post">
  <input type="submit" value="Delete">
</form>

<h3>Albums</h3>

<ul>
  <% @artist.albums.each do |album| %>
  <li><%= album.title %></li>
  <% end %>
</ul>

<a href="/albums/<%= @artist.id  %>/new">Add Album</a>
