<div class="title">
  <h2>INVENTORY</h2>
  <div class="sort">
      <h3>Sort |</h3>
      <% for level in @stock_levels do %>
        <a href="/inventory/sort/<%= level.downcase %>"><button scope="<%= level %>" class="sort-btn"></button></a>
      <% end %>
  </div>
</div>

<div class="table">
  <table>
    <thead>
      <tr>
        <th><h2>Album</h2></th>
        <th><h2>Artist</h2></th>
        <th class="price"><h2>Price</h2></th>
        <!-- <th id="stock-head"></th> -->
      </tr>
    </thead>
    <body>
      <% @stock.each do |album| %>
        <tr>
          <td><%= album.title  %></td>
          <td><%= album.artist.swap_the() %></td>
          <td class="price"> <%= album.price %></td>
          <td scope="<%= album.stock_level() %>" id="stock-level"></td>
        </tr>
      <% end %>
    </body>
  </table>
</div>

